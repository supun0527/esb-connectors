<template xmlns="http://ws.apache.org/ns/synapse" name="getReferrers">
    <parameter name="limitForGetReferrers"
               description="optional integer in the range of 1 to 1000 that specifies the number of records to return "/>
    <sequence>
        <property name="uri.var.limitForGetReferrers" expression="$func:limitForGetReferrers"/>
        <filter
                xpath="(not(get-property('uri.var.limitForGetReferrers'))) = '' or (not(string(get-property('uri.var.limitForGetReferrers'))))">
            <then>
                <property name="uri.var.apiParameters"
                          expression="fn:concat(get-property('uri.var.apiParameters'),'&amp;limit=',get-property('uri.var.limitForGetReferrers'))"/>
            </then>
        </filter>
        <property name="Accept-Encoding" action="remove" scope="transport"/>
        <payloadFactory media-type="xml">
            <format>
                <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
                    <soapenv:Header/>
                    <soapenv:Body>
                    </soapenv:Body>
                </soapenv:Envelope>
            </format>
            <args/>
        </payloadFactory>
        <call>
            <endpoint>
                <http method="GET"
                      uri-template="https://api-ssl.bitly.com/v3/user/referrers?access_token={+uri.var.bitly.accessToken}&amp;{+uri.var.apiParameters}"/>
            </endpoint>
        </call>
        <property name="messageType" value="application/json" scope="axis2"/>
    </sequence>
</template>
